<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookApp" WindowState="Maximized"
        Background="{DynamicResource WindowBackground}"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="WindowBackground" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="PageBackground" Color="White"/>
            <SolidColorBrush x:Key="PageForeground" Color="Black"/>
            <FontFamily x:Key="PageFontFamily">Arial</FontFamily>
            <System:Double x:Key="PageFontSize" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Background" Value="#4CAF50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#388E3C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Border.Background>
                                    <SolidColorBrush Color="#4CAF50"/>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#45A049" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#388E3C" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#A0A0A0" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#888"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#888"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            <Style TargetType="Slider">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="FlowDocumentPageViewer">
                <Setter Property="MaxHeight" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualHeight}"/>
                <Setter Property="MinZoom" Value="100"/>
                <Setter Property="MaxZoom" Value="100"/>
                <Setter Property="Zoom" Value="100"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <!-- Верхняя панель с вкладками и кнопками -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#E0E0E0">
            <TabControl Width="400" Margin="10">
                <TabItem Header="Оформление">
                    <StackPanel Margin="10" Width="360">
                        <Label Content="Цвет фона"/>
                        <ComboBox x:Name="BackgroundColorComboBox" SelectionChanged="BackgroundColorComboBox_SelectionChanged">
                            <ComboBoxItem Content="Белый" Tag="#FFFFFF"/>
                            <ComboBoxItem Content="Черный" Tag="#000000"/>
                            <ComboBoxItem Content="Серый" Tag="#D3D3D3"/>
                            <ComboBoxItem Content="Сепия" Tag="#F4ECD8"/>
                            <ComboBoxItem Content="Темно-синий" Tag="#1E3A5F"/>
                        </ComboBox>
                        <Label Content="Цвет шрифта"/>
                        <ComboBox x:Name="FontColorComboBox" SelectionChanged="FontColorComboBox_SelectionChanged">
                            <ComboBoxItem Content="Черный" Tag="#000000"/>
                            <ComboBoxItem Content="Белый" Tag="#FFFFFF"/>
                            <ComboBoxItem Content="Серый" Tag="#666666"/>
                            <ComboBoxItem Content="Коричневый" Tag="#5C4033"/>
                        </ComboBox>
                        <Label Content="Размер шрифта"/>
                        <Slider Minimum="8" Maximum="30" x:Name="FontSizeSlider" ValueChanged="FontSizeSlider_ValueChanged"/>
                        <Label Content="Шрифт"/>
                        <ComboBox x:Name="FontFamilyComboBox" SelectionChanged="FontFamilyComboBox_SelectionChanged">
                            <ComboBoxItem Content="Arial"/>
                            <ComboBoxItem Content="Times New Roman"/>
                            <ComboBoxItem Content="Segoe UI"/>
                            <ComboBoxItem Content="Calibri"/>
                            <ComboBoxItem Content="Georgia"/>
                            <ComboBoxItem Content="Verdana"/>
                        </ComboBox>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Настройки">
                    <StackPanel Margin="10" HorizontalAlignment="Center">
                        <Label Content="Ник"/>
                        <TextBox x:Name="NicknameTextBox"/>
                        <Button Content="Сохранить" Click="SaveNickname_Click"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Управление">
                    <StackPanel Margin="10">
                        <TextBlock FontSize="14" TextWrapping="Wrap">
                            <Bold>Горячие клавиши:</Bold><LineBreak/>
                            - <Bold>A</Bold>: Предыдущая страница<LineBreak/>
                            - <Bold>D</Bold>: Следующая страница<LineBreak/>
                            - <Bold>Ctrl + O</Bold>: Открыть книгу<LineBreak/>
                            - <Bold>Esc</Bold>: Выход из приложения
                        </TextBlock>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <!-- Кнопка "Книги" -->
            <Button Content="Книги" Margin="10" VerticalAlignment="Center">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Базовые книги" Click="DefaultBooks_Click"/>
                        <MenuItem Header="Открыть книгу" Click="OpenBook_Click"/>
                        <MenuItem Header="Закрыть книгу" Click="CloseBook_Click"/>
                        <MenuItem Header="Избранное" Click="Favorites_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                </BooleanAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <!-- Кнопки навигации -->
            <Button x:Name="PrevPageButton" Content="← Пред." Click="PrevPage_Click" Margin="5" Visibility="Collapsed"/>
            <Button x:Name="NextPageButton" Content="След. →" Click="NextPage_Click" Margin="5" Visibility="Collapsed"/>
        </StackPanel>
        <!-- Основная область для книги с разворотом -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/> <!-- Промежуток между страницами -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <FlowDocumentPageViewer x:Name="LeftPageViewer" Grid.Column="0">
                <FlowDocument x:Name="LeftPageDocument"
                              Background="{DynamicResource PageBackground}"
                              Foreground="{DynamicResource PageForeground}"
                              FontFamily="{DynamicResource PageFontFamily}"
                              FontSize="{DynamicResource PageFontSize}"
                              PagePadding="20"
                              TextAlignment="Justify"
                              LineHeight="1.5"
                              IsHyphenationEnabled="True"/>
            </FlowDocumentPageViewer>
            <FlowDocumentPageViewer x:Name="RightPageViewer" Grid.Column="2">
                <FlowDocument x:Name="RightPageDocument"
                              Background="{DynamicResource PageBackground}"
                              Foreground="{DynamicResource PageForeground}"
                              FontFamily="{DynamicResource PageFontFamily}"
                              FontSize="{DynamicResource PageFontSize}"
                              PagePadding="20"
                              TextAlignment="Justify"
                              LineHeight="1.5"
                              IsHyphenationEnabled="True"/>
            </FlowDocumentPageViewer>
        </Grid>
    </DockPanel>
</Window>