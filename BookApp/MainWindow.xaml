<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookApp" WindowState="Maximized"
        Background="{DynamicResource WindowBackground}"
        KeyDown="Window_KeyDown"
        SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="WindowBackground" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="PageBackground" Color="White"/>
            <SolidColorBrush x:Key="PageForeground" Color="Black"/>
            <FontFamily x:Key="PageFontFamily">Arial</FontFamily>
            <System:Double x:Key="PageFontSize" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Background" Value="#4CAF50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#388E3C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Border.Background>
                                    <SolidColorBrush Color="#4CAF50"/>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#45A049" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#388E3C" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="Border"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#A0A0A0" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#888"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            <Style TargetType="FlowDocumentPageViewer">
                <Setter Property="MaxHeight" Value="650"/>
                <Setter Property="MinZoom" Value="100"/>
                <Setter Property="MaxZoom" Value="100"/>
                <Setter Property="Zoom" Value="100"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#E0E0E0" Height="40">
            <Button Content="Настройки" Margin="5">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Цвет фона">
                            <MenuItem Header="Белый" Tag="#FFFFFF" Click="BackgroundColorMenuItem_Click"/>
                            <MenuItem Header="Черный" Tag="#000000" Click="BackgroundColorMenuItem_Click"/>
                            <MenuItem Header="Серый" Tag="#D3D3D3" Click="BackgroundColorMenuItem_Click"/>
                            <MenuItem Header="Сепия" Tag="#F4ECD8" Click="BackgroundColorMenuItem_Click"/>
                            <MenuItem Header="Темно-синий" Tag="#1E3A5F" Click="BackgroundColorMenuItem_Click"/>
                        </MenuItem>
                        <MenuItem Header="Цвет шрифта">
                            <MenuItem Header="Черный" Tag="#000000" Click="FontColorMenuItem_Click"/>
                            <MenuItem Header="Белый" Tag="#FFFFFF" Click="FontColorMenuItem_Click"/>
                            <MenuItem Header="Серый" Tag="#666666" Click="FontColorMenuItem_Click"/>
                            <MenuItem Header="Коричневый" Tag="#5C4033" Click="FontColorMenuItem_Click"/>
                        </MenuItem>
                        <MenuItem Header="Шрифт">
                            <MenuItem Header="Arial" Click="FontFamilyMenuItem_Click"/>
                            <MenuItem Header="Times New Roman" Click="FontFamilyMenuItem_Click"/>
                            <MenuItem Header="Segoe UI" Click="FontFamilyMenuItem_Click"/>
                            <MenuItem Header="Calibri" Click="FontFamilyMenuItem_Click"/>
                            <MenuItem Header="Georgia" Click="FontFamilyMenuItem_Click"/>
                            <MenuItem Header="Verdana" Click="FontFamilyMenuItem_Click"/>
                        </MenuItem>
                        <MenuItem Header="Смена ника" Click="ChangeNickname_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                </BooleanAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Управление" Margin="5">
                <Button.ContextMenu>
                    <ContextMenu>
                        <TextBlock FontSize="14" TextWrapping="Wrap" Margin="5">
                            <Bold>Горячие клавиши:</Bold><LineBreak/>
                            - <Bold>A</Bold>: Предыдущая страница<LineBreak/>
                            - <Bold>D</Bold>: Следующая страница<LineBreak/>
                            - <Bold>Ctrl + O</Bold>: Открыть книгу<LineBreak/>
                            - <Bold>Ctrl + B</Bold>: Базовые книги<LineBreak/>
                            - <Bold>Ctrl + F</Bold>: Поиск<LineBreak/>
                            - <Bold>Esc</Bold>: Выход из приложения
                        </TextBlock>
                    </ContextMenu>
                </Button.ContextMenu>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                </BooleanAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Книги" Margin="5">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Базовые книги" Click="DefaultBooks_Click"/>
                        <MenuItem Header="Открыть книгу" Click="OpenBook_Click"/>
                        <MenuItem Header="Закрыть книгу" Click="CloseBook_Click"/>
                        <MenuItem Header="Избранное" Click="Favorites_Click"/>
                        <MenuItem Header="Оглавление" Click="TableOfContents_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                </BooleanAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="#E0E0E0" Height="30" VerticalAlignment="Center">
            <TextBlock x:Name="BookProgressText" Margin="10,0" VerticalAlignment="Center" FontSize="12"/>
        </StackPanel>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="BookTitleTextBlock" Grid.Row="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Visibility="Collapsed"/>
            <Border Grid.Row="1" Background="White" BorderBrush="#D3D3D3" BorderThickness="1" CornerRadius="5" Padding="10">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <FlowDocumentReader x:Name="LeftPageViewer" Grid.Column="0" HorizontalAlignment="Stretch" Loaded="PageViewer_Loaded">
                        <FlowDocument x:Name="LeftPageDocument"
                                      Background="{DynamicResource PageBackground}"
                                      Foreground="{DynamicResource PageForeground}"
                                      FontFamily="{DynamicResource PageFontFamily}"
                                      FontSize="{DynamicResource PageFontSize}"
                                      PagePadding="10"
                                      TextAlignment="Justify"
                                      LineHeight="1.5"
                                      IsHyphenationEnabled="True"
                                      IsColumnWidthFlexible="False"
                                      ColumnWidth="1500"
                                      ColumnGap="5"/>
                    </FlowDocumentReader>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>