<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookApp" Height="600" Width="800">
    <Grid>
        <TabControl>
            <!-- Вкладка Книги -->
            <TabItem Header="Книги">
                <StackPanel Margin="10">
                    <Button Content="Базовые книги" Click="DefaultBooks_Click" Margin="0,5"/>
                    <Button Content="Открыть книгу" Click="OpenBook_Click" Margin="0,5"/>
                    <Button Content="Избранное" Click="Favorites_Click" Margin="0,5"/>
                    <Button Content="История чтения" Click="History_Click" Margin="0,5"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка Оформление -->
            <TabItem Header="Оформление">
                <StackPanel Margin="10">
                    <Label Content="Цвет фона"/>
                    <ComboBox x:Name="BackgroundColorComboBox" Margin="0,5"/>

                    <Label Content="Цвет шрифта"/>
                    <ComboBox x:Name="FontColorComboBox" Margin="0,5"/>

                    <Label Content="Размер шрифта"/>
                    <Slider Minimum="8" Maximum="30" x:Name="FontSizeSlider" Margin="0,5"/>

                    <Label Content="Шрифт"/>
                    <ComboBox x:Name="FontFamilyComboBox" Margin="0,5"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка Настройки -->
            <TabItem Header="Настройки">
                <StackPanel Margin="10">
                    <Label Content="Ник"/>
                    <TextBox x:Name="NicknameTextBox" Margin="0,5"/>
                    <Button Content="Сохранить" Click="SaveNickname_Click" Margin="0,5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>