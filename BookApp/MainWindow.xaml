<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookApp" Height="600" Width="800"
        Background="{DynamicResource WindowBackground}">
    
    <!-- Используем ресурс для стилизации -->
    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="WindowBackground" Color="#F5F5F5"/>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Background" Value="#4CAF50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#388E3C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#888"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#888"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <Style TargetType="Slider">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Вкладка Книги -->
            <TabItem Header="Книги">
                <StackPanel Margin="10" HorizontalAlignment="Center">
                    <Button Content="Базовые книги" Click="DefaultBooks_Click"/>
                    <Button Content="Открыть книгу" Click="OpenBook_Click"/>
                    <Button Content="Избранное" Click="Favorites_Click"/>
                    <Button Content="История чтения" Click="History_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка Оформление -->
            <TabItem Header="Оформление">
                <StackPanel Margin="10" HorizontalAlignment="Center">
                    <Label Content="Цвет фона"/>
                    <ComboBox x:Name="BackgroundColorComboBox" />
                    <Label Content="Цвет шрифта"/>
                    <ComboBox x:Name="FontColorComboBox"/>
                    <Label Content="Размер шрифта"/>
                    <Slider Minimum="8" Maximum="30" x:Name="FontSizeSlider"/>
                    <Label Content="Шрифт"/>
                    <ComboBox x:Name="FontFamilyComboBox"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка Настройки -->
            <TabItem Header="Настройки">
                <StackPanel Margin="10" HorizontalAlignment="Center">
                    <Label Content="Ник"/>
                    <TextBox x:Name="NicknameTextBox"/>
                    <Button Content="Сохранить" Click="SaveNickname_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>