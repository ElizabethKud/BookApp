<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookApp" WindowState="Maximized"
        Background="{DynamicResource WindowBackground}">

    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="WindowBackground" Color="#F5F5F5"/>

            <Style TargetType="Button">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Background" Value="#4CAF50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#388E3C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#888"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#888"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <Style TargetType="Slider">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Margin" Value="0,5"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Вкладка Книги -->
            <TabItem Header="Книги">
                <StackPanel Margin="10" HorizontalAlignment="Center">
                    <Button Content="Базовые книги" Click="DefaultBooks_Click"/>
                    <Button Content="Открыть книгу" Click="OpenBook_Click"/>
                    <Button Content="Избранное" Click="Favorites_Click"/>
                    <Button Content="История чтения" Click="History_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка Книга -->
            <TabItem Header="Книга">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden">
                            <TextBlock x:Name="LeftPageTextBlock"
                                       TextWrapping="Wrap"
                                       FontSize="16"
                                       FontFamily="Arial"
                                       Foreground="Black"
                                       Background="White"
                                       Padding="10"/>
                        </ScrollViewer>

                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Hidden">
                            <TextBlock x:Name="RightPageTextBlock"
                                       TextWrapping="Wrap"
                                       FontSize="16"
                                       FontFamily="Arial"
                                       Foreground="Black"
                                       Background="White"
                                       Padding="10"/>
                        </ScrollViewer>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button Content="← Пред." Click="PrevPage_Click" Margin="5"/>
                        <Button Content="След. →" Click="NextPage_Click" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка Оформление -->
            <TabItem Header="Оформление">
                <StackPanel Margin="10" HorizontalAlignment="Center" Width="300">
                    <Label Content="Цвет фона"/>
                    <ComboBox x:Name="BackgroundColorComboBox" SelectionChanged="BackgroundColorComboBox_SelectionChanged">
                        <ComboBoxItem Content="Белый" Tag="#FFFFFF"/>
                        <ComboBoxItem Content="Черный" Tag="#000000"/>
                        <ComboBoxItem Content="Серый" Tag="#D3D3D3"/>
                        <ComboBoxItem Content="Сепия" Tag="#F4ECD8"/>
                        <ComboBoxItem Content="Темно-синий" Tag="#1E3A5F"/>
                    </ComboBox>
                    <Label Content="Цвет шрифта"/>
                    <ComboBox x:Name="FontColorComboBox" SelectionChanged="FontColorComboBox_SelectionChanged">
                        <ComboBoxItem Content="Черный" Tag="#000000"/>
                        <ComboBoxItem Content="Белый" Tag="#FFFFFF"/>
                        <ComboBoxItem Content="Серый" Tag="#666666"/>
                        <ComboBoxItem Content="Коричневый" Tag="#5C4033"/>
                    </ComboBox>
                    <Label Content="Размер шрифта"/>
                    <Slider Minimum="8" Maximum="30" x:Name="FontSizeSlider" ValueChanged="FontSizeSlider_ValueChanged"/>
                    <Label Content="Шрифт"/>
                    <ComboBox x:Name="FontFamilyComboBox" SelectionChanged="FontFamilyComboBox_SelectionChanged">
                        <ComboBoxItem Content="Arial"/>
                        <ComboBoxItem Content="Times New Roman"/>
                        <ComboBoxItem Content="Segoe UI"/>
                        <ComboBoxItem Content="Calibri"/>
                        <ComboBoxItem Content="Georgia"/>
                        <ComboBoxItem Content="Verdana"/>
                    </ComboBox>
                </StackPanel>
            </TabItem>

            <!-- Вкладка Настройки -->
            <TabItem Header="Настройки">
                <StackPanel Margin="10" HorizontalAlignment="Center">
                    <Label Content="Ник"/>
                    <TextBox x:Name="NicknameTextBox"/>
                    <Button Content="Сохранить" Click="SaveNickname_Click"/>
                </StackPanel></TabItem>
            </TabControl>
    </Grid>
</Window>
